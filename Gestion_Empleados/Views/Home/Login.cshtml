@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post" class="bloque mx-auto">
    <div class="form-horizontal">
        <h1 class="text-center bloque text-white">Inicio de Sesión</h1>
        <h4 class="text-center text-white">Ingresa tu usuario y contraseña:</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row justify-content-center">
            <label for="usuario" class="col-sm-4 col-form-label text-warning text-right">Usuario</label>
            <div class="col-sm-7">
                <input id="usuario" name="usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label for="password" class="col-sm-4 col-form-label text-warning text-right">Contraseña</label>
            <div class="col-sm-7">
                <input id="password" name="password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-success">Iniciar Sesión</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
