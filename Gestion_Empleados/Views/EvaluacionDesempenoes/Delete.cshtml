@model Gestion_Empleados.Models.EvaluacionDesempeno

@{
    ViewData["Title"] = "Eliminar Evaluación de Desempeño";
}


<div class="container bloque mx-auto">
    <h1 class="text-center text-white">Eliminar Evaluación de Desempeño</h1>

    <h3 class="text-center text-white">¿Estás seguro que deseas eliminar esto?</h3>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title text-primary">Detalles de la Evaluación</h4>
            <dl class="row">
                <dt class="col-sm-4">Fecha de Evaluación</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaEvaluacion)</dd>

                <dt class="col-sm-4">Objetivos</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Objetivos)</dd>

                <dt class="col-sm-4">Retroalimentación</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Retroalimentacion)</dd>

                <dt class="col-sm-4">Empleado</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.Apellidos)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4 text-center">
        <input type="hidden" asp-for="EvaluacionDesempenoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger mx-2" />
        <a asp-action="Index" class="btn btn-secondary mx-2">Cancelar</a>
    </form>
</div>
