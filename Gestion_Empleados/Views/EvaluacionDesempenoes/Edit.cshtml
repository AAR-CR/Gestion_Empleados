@model Gestion_Empleados.Models.EvaluacionDesempeno

@{
    ViewData["Title"] = "Editar Evaluación de Desempeño";
}

<h1 class="text-center text-white">Editar Evaluación de Desempeño</h1>

<div class="container bloque mx-auto">
    <form asp-action="Edit" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="EvaluacionDesempenoId" />

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="EmpleadoId" class="col-sm-4 col-form-label text-warning text-right">Empleado</label>
            <div class="col-sm-7">
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId"></select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="FechaEvaluacion" class="col-sm-4 col-form-label text-warning text-right">Fecha de Evaluación</label>
            <div class="col-sm-7">
                <input asp-for="FechaEvaluacion" class="form-control" />
                <span asp-validation-for="FechaEvaluacion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Objetivos" class="col-sm-4 col-form-label text-warning text-right">Objetivos</label>
            <div class="col-sm-7">
                <input asp-for="Objetivos" class="form-control" />
                <span asp-validation-for="Objetivos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Retroalimentacion" class="col-sm-4 col-form-label text-warning text-right">Retroalimentación</label>
            <div class="col-sm-7">
                <input asp-for="Retroalimentacion" class="form-control" />
                <span asp-validation-for="Retroalimentacion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-primary mx-2" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
