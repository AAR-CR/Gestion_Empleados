@model Gestion_Empleados.Models.Jornada

@{
    ViewData["Title"] = "Editar Jornada";
}

<h1 class="text-center text-white">Editar Jornada</h1>

<div class="container bloque mx-auto">
    <form asp-action="Edit" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="JornadaId" />

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Nombre" class="col-sm-4 col-form-label text-warning text-right">Nombre</label>
            <div class="col-sm-7">
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="HoraInicio" class="col-sm-4 col-form-label text-warning text-right">Hora de Inicio</label>
            <div class="col-sm-7">
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-4">
            <label asp-for="HoraFin" class="col-sm-4 col-form-label text-warning text-right">Hora de Fin</label>
            <div class="col-sm-7">
                <input asp-for="HoraFin" class="form-control" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-success mx-2" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Cancelar</a>
            </div>
        </div>
    </form>
</div>
