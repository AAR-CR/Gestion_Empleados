@model Gestion_Empleados.Models.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
}

<div class="container bloque mx-auto">
    <h1 class="text-center text-primary fw-bold">Eliminar Turno</h1>
    <h3 class="text-center text-white">¿Estás seguro de que deseas eliminar este turno?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 text-warning text-right">
            @Html.DisplayNameFor(model => model.Inicio)
        </dt>
        <dd class="col-sm-8 text-white">
            @Html.DisplayFor(model => model.Inicio)
        </dd>
        <dt class="col-sm-4 text-warning text-right">
            @Html.DisplayNameFor(model => model.Final)
        </dt>
        <dd class="col-sm-8 text-white">
            @Html.DisplayFor(model => model.Final)
        </dd>
        <dt class="col-sm-4 text-warning text-right">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-8 text-white">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-4 text-warning text-right">
            @Html.DisplayNameFor(model => model.Empleado.Apellidos)
        </dt>
        <dd class="col-sm-8 text-white">
            @Html.DisplayFor(model => model.Empleado.Apellidos)
        </dd>
    </dl>

    <hr />
    <div class="text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="TurnoId" />
            <input type="submit" value="Eliminar" class="btn btn-danger mx-2" />
        </form>
        <a asp-action="Index" class="btn btn-secondary mx-2">Volver a la Lista</a>
    </div>
</div>
