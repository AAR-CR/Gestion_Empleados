@model Gestion_Empleados.Models.Turno

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container bloque mx-auto">
    <h1 class="text-center text-primary fw-bold">Editar Turno</h1>
    <hr />
    <form asp-action="Edit" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="TurnoId" />

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="EmpleadoId" class="col-sm-4 col-form-label text-warning text-right">Empleado</label>
            <div class="col-sm-7">
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId"></select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Inicio" class="col-sm-4 col-form-label text-warning text-right">Inicio</label>
            <div class="col-sm-7">
                <input asp-for="Inicio" class="form-control" />
                <span asp-validation-for="Inicio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Final" class="col-sm-4 col-form-label text-warning text-right">Final</label>
            <div class="col-sm-7">
                <input asp-for="Final" class="form-control" />
                <span asp-validation-for="Final" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Descripcion" class="col-sm-4 col-form-label text-warning text-right">Descripción</label>
            <div class="col-sm-7">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-success mx-2" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Cancelar</a>
            </div>
        </div>
    </form>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-info">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
