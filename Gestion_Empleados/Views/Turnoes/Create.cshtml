@model Gestion_Empleados.Models.Turno

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" class="bloque mx-auto">
    <div class="form-horizontal">
        <h1 class="text-center bloque text-white">Crear Turno</h1>
        <h4 class="text-center text-white">Ingrese la información del turno:</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row justify-content-center">
            <label asp-for="EmpleadoId" class="col-sm-4 col-form-label text-warning text-right">Empleado</label>
            <div class="col-sm-7">
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId" ></select>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label asp-for="Inicio" class="col-sm-4 col-form-label text-warning text-right">Inicio</label>
            <div class="col-sm-7">
                <input asp-for="Inicio" class="form-control" />
                <span asp-validation-for="Inicio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label asp-for="Final" class="col-sm-4 col-form-label text-warning text-right">Final</label>
            <div class="col-sm-7">
                <input asp-for="Final" class="form-control" />
                <span asp-validation-for="Final" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label asp-for="Descripcion" class="col-sm-4 col-form-label text-warning text-right">Descripción</label>
            <div class="col-sm-7">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <a asp-action="Index" class="btn btn-primary">Volver</a>
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
