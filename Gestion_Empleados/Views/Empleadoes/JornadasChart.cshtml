@{
    ViewData["Title"] = "Distribución de Jornadas";
    var labels = ViewBag.Labels as List<string>;
    var values = ViewBag.Values as List<int>;
}

<h2 class="text-center text-white">Distribución de Jornadas</h2>
<div class="container bloque mx-auto">
    <canvas id="jornadasChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('jornadasChart').getContext('2d');
    var jornadasChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(labels)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(values)),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Distribución de Jornadas entre Empleados'
                }
            }
        }
    });
</script>
