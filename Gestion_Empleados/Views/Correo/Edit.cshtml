@model Gestion_Empleados.Models.Correo

@{
    ViewData["Title"] = "Editar Correo";
}


<div class="container bloque mx-auto">
    <h1 class="text-center text-success fw-bold">Editar Correo</h1>

    <form asp-action="Edit" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="CorreoId" />

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="RemitenteId" class="col-sm-4 col-form-label text-warning text-right">Remitente</label>
            <div class="col-sm-7">
                <select asp-for="RemitenteId" class="form-control" asp-items="ViewBag.RemitenteId"></select>
                <span asp-validation-for="RemitenteId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="DestinatarioId" class="col-sm-4 col-form-label text-warning text-right">Destinatario</label>
            <div class="col-sm-7">
                <select asp-for="DestinatarioId" class="form-control" asp-items="ViewBag.DestinatarioId"></select>
                <span asp-validation-for="DestinatarioId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Asunto" class="col-sm-4 col-form-label text-warning text-right">Asunto</label>
            <div class="col-sm-7">
                <input asp-for="Asunto" class="form-control" />
                <span asp-validation-for="Asunto" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
            <label asp-for="Texto" class="col-sm-4 col-form-label text-warning text-right">Mensaje</label>
            <div class="col-sm-7">
                <textarea asp-for="Texto" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-4">
            <label asp-for="Fecha" class="col-sm-4 col-form-label text-warning text-right">Fecha</label>
            <div class="col-sm-7">
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-success mx-2" />
                <a asp-action="Index" class="btn btn-secondary mx-2">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
